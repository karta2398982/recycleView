<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ksu4040e071.recycleview.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:cardCornerRadius="50dp"
            card_view:cardElevation="24dp">

            <ImageButton
                android:layout_width="match_parent"
                card_view:srcCompat="@drawable/news"
                android:id="@+id/imageButton"
                android:elevation="9dp"
                android:onClick="onlistClick"
                android:scaleType="fitXY"
                android:layout_height="210dp" />

            <ImageButton
                android:layout_width="match_parent"
                card_view:srcCompat="@drawable/movie"
                android:layout_marginTop="210dp"
                android:id="@+id/imageButton2"
                android:onClick="onGridClick"
                android:elevation="9dp"
                android:scaleType="fitXY"
                android:layout_height="210dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="210dp"
                card_view:srcCompat="@drawable/tourism"
                android:id="@+id/imageButton3"
                android:layout_marginTop="420dp"
                android:elevation="9dp"
                android:onClick="oncardClick"
                android:scaleType="fitXY" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="210dp"
                card_view:srcCompat="@drawable/landscape"
                android:id="@+id/imageButton4"
                android:scaleType="fitXY"
                android:layout_marginTop="630dp"
                android:onClick="onRecycleClick"
                android:elevation="9dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="Send Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btSend"
                    android:layout_marginTop="840dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:onClick="onSendClick"/>

                <Button
                    android:text="Cancel Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btCancel"
                    android:layout_marginTop="840dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:onClick="onCancelClick"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </ScrollView>
</LinearLayout>
